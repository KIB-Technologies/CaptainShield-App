<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert"
            android:padding="15sp"
            android:id="@+id/setting_alert"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:textColor="@color/light_white"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/setting_info"
            android:text="@string/settings_info"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/switch_smsresponse"
            android:text="@string/setting_sms_response"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logs Settings"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:padding="15sp"
            android:id="@+id/setting_logs"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:textColor="@color/light_white"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Admin Services"
            android:textColor="@color/colorBlack"
            android:id="@+id/logadmin"
            android:padding="15sp"
            android:checked="true" />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Logs"
            android:textColor="@color/colorBlack"
            android:id="@+id/logdevice"
            android:padding="15sp"
            android:checked="true" />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="InApp Activity"
            android:textColor="@color/colorBlack"
            android:id="@+id/logapp"
            android:padding="15sp"
            android:checked="true" />
    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_white"
        android:layout_gravity="center_horizontal"
        android:text="@string/next"
        android:id="@+id/act_welcome_next_btn" />

</LinearLayout>